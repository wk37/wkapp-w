<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="sign_SplashTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <!-- 实际使用将下面属性设置为 图片，此处暂时用 颜色值代替-->
        <item name="android:windowBackground">@drawable/layer_splash_bg</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="sign_WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar"/>


</resources>
